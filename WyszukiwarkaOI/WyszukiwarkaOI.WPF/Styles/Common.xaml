<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--#region Colors -->

    <!--Colors-->
    <Color x:Key="ColorPrimaryDark">#353535</Color>
    <Color x:Key="ColorPrimaryLight">#505050</Color>
    <Color x:Key="ColorAppFont">White</Color>

    <!--#endregion-->

    <!--#region Brushes -->

    <!--Brushes-->
    <SolidColorBrush x:Key="BrushPrimaryDark"
                     Color="{StaticResource ColorPrimaryDark}" />
    <SolidColorBrush x:Key="BrushPrimaryLight"
                     Color="{StaticResource ColorPrimaryLight}" />
    <SolidColorBrush x:Key="BrushAppFont"
                     Color="{StaticResource ColorAppFont}" />

    <!--#endregion-->

    <!--#region TextBlocks -->
    
    <!--TextBlock-->
    <Style x:Key="whiteFont"
           TargetType="TextBlock">
        <Setter Property="Foreground"
                Value="{StaticResource BrushAppFont}" />
    </Style>

    <!--#endregion-->

</ResourceDictionary>